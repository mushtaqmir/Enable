<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.mushtaqmir.app4.ActivityMain">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="950dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/speakerBtn"
            android:layout_width="63dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            android:background="@drawable/oval"
            android:scaleType="fitCenter"
            android:src="@drawable/speakerphone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="580dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/templateStartBtn"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:text="Template"
            android:theme="@style/ButtonAction"
            android:background="#ffc400"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="529dp" />

        <Button
            android:id="@+id/chatBtn"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:theme="@style/ButtonAction"
            android:background="#ffc400"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="529dp" />


        <Button
            android:id="@+id/startBtn"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:theme="@style/ButtonAction"
            android:background="#ffc400"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="529dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/pumpImageView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout2"
            android:scaleType="fitCenter"
            android:src="@drawable/pump" />

    </LinearLayout>


</RelativeLayout>
