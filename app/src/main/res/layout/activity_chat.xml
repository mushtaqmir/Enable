<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mushtaqmir.app4.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">>
        <ListView
            android:id="@+id/custMsgListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="13dp"
            android:stackFromBottom="true"
            android:divider="#00000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="10dp">


        <ImageButton
            android:id="@+id/micBtn"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onMicTap"
            android:scaleType="fitCenter"
            android:src="@drawable/microphone" />

        <EditText
            android:id="@+id/custText"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="553dp" />

        <Button
            android:id="@+id/custBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Cust"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="553dp" />

        <EditText
            android:id="@+id/empText"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="553dp" />

        <Button
            android:id="@+id/empBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Emp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="553dp" />
    </LinearLayout>

</RelativeLayout>
