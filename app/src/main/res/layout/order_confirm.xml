<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:background="#ffc400">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:theme="@style/FontColorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/OrderConfirmTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            style="@style/FontStyleHdr"
            android:text="Order Confirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/FueTypeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Fuel Type"
            style="@style/FontStyleHdr"
            app:layout_constraintBaseline_toBaselineOf="@+id/FuelType"/>

        <TextView
            android:id="@+id/FuelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="70dp"
            android:text="Fuel Type"
            style="@style/FontStylefotter"
            app:layout_constraintBaseline_toBaselineOf="@+id/FueTypeTxt"/>

        <TextView
            android:id="@+id/fuelCategoryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:text="Fuel Category"
            style="@style/FontStyleHdr"
            app:layout_constraintBaseline_toBaselineOf="@+id/fuelCategory"/>


        <TextView
            android:id="@+id/fuelCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            style="@style/FontStylefotter"
            android:layout_marginTop="120dp"
            android:text="Fuel Category"
            app:layout_constraintBaseline_toBaselineOf="@+id/fuelCategoryTxt"/>


        <TextView
            android:id="@+id/paymentModeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:inputType="numberDecimal"
            android:text="Payment Mode"
            style="@style/FontStyleHdr" />

        <TextView
            android:id="@+id/paymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            style="@style/FontStylefotter"
            android:layout_marginTop="170dp"
            android:text="Payment Mode" />

        <TextView
            android:id="@+id/WindshieldCleanRevTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"
            style="@style/FontStyleHdr"
            android:text="Windshield Cleaning" />

        <TextView
            android:id="@+id/WindshieldCleanReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            style="@style/FontStylefotter"
            android:layout_marginTop="220dp"
            android:text="Yes" />

        <TextView
            android:id="@+id/freeOilRevTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="270dp"
            style="@style/FontStyleHdr"
            android:text="FREE Oil Change" />

        <TextView
            android:id="@+id/freeOilRev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            style="@style/FontStylefotter"
            android:layout_marginTop="270dp"
            android:text="Yes" />

        <TextView
            android:id="@+id/FuelTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp"
            style="@style/FontStyleHdr"
            android:text="Fuel Amount"
            app:layout_constraintBaseline_toBaselineOf="@+id/FuelTxt"/>

        <TextView
            android:id="@+id/Fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="320dp"
            style="@style/FontStylefotter"
            android:inputType="numberDecimal"
            android:text="Fuel Amount"
            app:layout_constraintBaseline_toBaselineOf="@+id/Fuel"/>

        <Button
            android:id="@+id/StartNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:theme="@style/ButtonAction"
            android:background="#ffffff"
            android:text="Start New Order"
            app:layout_constraintTop_toBottomOf="@+id/paymentMode"/>
        <Button
            android:id="@+id/showOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="400dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Order history"
            android:theme="@style/ButtonAction"
            android:background="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/paymentMode"/>

    </FrameLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>